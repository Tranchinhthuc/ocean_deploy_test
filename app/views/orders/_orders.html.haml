%p
  = link_to 'Add more', new_order_path(product_type: product_type), class: 'btn btn-primary'
.scroll-table
  %table.table.table-striped.table-bordered
    %thead
      %tr
        %th STT
        %th Kháck hàng
        %th Mã SP
        %th Mã code
        %th SĐT
        %th Tiền hàng
        %th Tiền Ship
        %th Ngày gửi
        %th Ghi chú
        %th Customer Email
        %th Customer Birthday
        %th Customer address
        %th Actions
    %tbody
      - @orders.each.with_index do |order, index|
        %tr
          %td= index + 1
          %td= order.customer_name
          %td= order.product_code
          %td= order.ship_code
          %td= order.customer_phone
          %td= order.product_cost
          %td= order.ship_cost
          %td= order.sent_date
          %td= order.colors_to_s
          %td= order.customer_email
          %td= order.customer_birthday
          %td= order.customer_address
          %td
            = link_to 'Show', order_path(order)
            |
            = link_to 'Edit', edit_order_path(order)
            |
            = link_to('Delete', order_path(order), method: :delete, data: {confirm: 'Are you sure?'})
