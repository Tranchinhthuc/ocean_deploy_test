.row
  .col-sm-10.col-sm-offset-1
    %h2 Add order

    = form_for(@order, html: {class: 'form-horizontal'}) do |f|
      = render 'form', f: f

      .form-group
        .col-sm-offset-2.col-sm-10
          = f.submit "Add", class: 'btn btn-primary'
          = f.submit "Add and Continue", class: 'btn btn-primary'
